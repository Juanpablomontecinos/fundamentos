int longitud(string nombre)
{
int aux1;
aux1=nombre.lenght();
return aux1;
}
bool comparar(string palabra,string palabra2)
{
bool aux;
if(palabra.compare(palabra2)==0)
aux=true;
else
aux=false;
return aux;
}
int encontrar(string cadena,string k)
{
int aux;
aux=cadena.find(k);
return aux;
}
string subcadena((string nombre,int pos,int 1)
{
string aux;
aux=nombre.substring(pos,1);
return aux;
}
bool palindromo(string palabra)
{
for(int i=0;i<palabra.lenght()/2;i++)
if(palabra.at(i)!=palabra.at(palabra.lenght()-1-i))
return false;
else
return true;
}
