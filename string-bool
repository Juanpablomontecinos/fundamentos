#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>

using namespace std;

int longitud(string nombre);
bool comparar (string palabra,string palabra2);
int encontrar (string cadena, string k);
string subcadena(string cadena,int pos,string k);
bool palindromo(string palabra);
void main()
{
int cont,pos,opc;
char aux;
string var1,var2,var3,nombre;
do
{
cout<<"\t MENU\n";
cout<<"1. Longitud \n";
cout<<"2. Comparar \n";
cout<<"3. Encontrar\n";
cout<<"4. Subcadena\n";
cout<<"5. Palindromo\n";
cout<<"0. Salir \n";
cout<<"opcion: ";
cin>>opc;
switch(opc)
{
case 1: cout<<"ingresar la cadena:";
    getline (cin,var1);
    aux=longitud(var1);
    cout<<"La cadena"<<var1<<"es: "<<aux;
    break;
case 2: cout<<"ingresaar la cadena";
    getline(cin,var1);
    cout<<"ingresar la cadena";
    getline(cin,var2);
    if(comparar(var1,var2))
    cout<<"son iguales";
    else
        cout<<"son diferentes";
    break;
case 3: cout<<"ingresar la cadena principal";
    getline(cin,var1);
    cout<<"ingresar la cadena a buscar";
    getline(cin,var1);
    pos=encontrar(var1,var2);
    if(pos==-1)
        cout<<"No esta la cadena dentro de la otra";
    else
        cout<<"Empieza en la posicion"<<pos;
    break;
case 4: cout<<"ingresar la cadena principal";
    getline(cin,var1);
    cout<<"ingresar la poscion a devolver";
    cin>>pos;
    nombre=subcadena(var1,pos,1);
    cout<<"la subcadena en la posicion"<<pos<<"es:"<<nombre;
    break;
case 5: cout<<"ingresar la cadena principal";
    getline(cin,var1);
    if(palindromo(var1))
    cout<<"es un palindromo";
    else
    cout<<<"no es palindromo";  
    break;
case 0: cout<<"salir";
    break;
    default: cout<<"error";
